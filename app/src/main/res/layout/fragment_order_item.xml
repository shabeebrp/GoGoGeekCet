

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:padding="10dp"
tools:context="com.shabeeb.hashim.gogeekcet.AboutFragment"

    >

<!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context="com.shabeeb.hashim.gogeekcet.OrderItem"

        android:padding="30dp"
        >
        <!-- TODO: Update blank fragment layout -->

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/item_type"
            android:textSize="20sp"
            android:hint="Type"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/qtyET"
            android:layout_alignEnd="@+id/qtyET"

            />
        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/item_name"
            android:textSize="20sp"
            android:hint="Name"

            android:layout_below="@+id/item_type"
            android:layout_alignLeft="@+id/priceTV"
            android:layout_alignStart="@+id/priceTV"
            android:layout_marginTop="45dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Item "
            android:id="@+id/order_btn"
            android:layout_alignTop="@+id/cart_button"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:theme="@style/MyButton"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/itemsTV"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="@color/indigo"
            android:layout_below="@+id/cart_button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="19dp"
            android:text="Cart Empty"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add to Cart"
            android:id="@+id/cart_button"
            android:theme="@style/Button2"
            android:layout_below="@+id/priceTV"
            android:layout_alignParentLeft="true"

            android:layout_marginTop="14dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="20sp"
            android:id="@+id/priceTV"
            android:layout_below="@+id/qtyET"
            android:textColor="#006064"
            android:layout_alignParentLeft="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:hint="Qty"
            android:id="@+id/qtyET"
            android:layout_below="@+id/item_name"
            android:layout_alignLeft="@+id/order_btn"
            />

        <TextView
            android:text="Delivery on monday and friday, Time:12.30 to 1 pm and 4 to 5.30pm, Open on saturdays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textAlignment="center"

            android:layout_below="@+id/itemsTV" />

    </RelativeLayout>


</ScrollView>
